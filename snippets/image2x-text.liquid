<div class="grid--full callout-text-left">

  <div class="grid__item large--one-half callout-right">
    <div class="callout-image-bottom" style="background: url({{ image1 }}); background-repeat: no-repeat; background-size: cover;">
    </div>
    <div class="callout-image-top" style="background: url({{ image2 }}); background-repeat: no-repeat; background-size: cover;">
    </div>
  </div>

  <div class="grid__item large--one-half callout-left">
    <div class="callout-title">
      <h1>{{ title }}</h1>
    </div>
    <div class="callout-description">
      <p>{{ description }}</p>
    </div>
  </div>

</div>
