<div class="grid--full callout-text-left">

  <div class="grid__item large--one-half">
    <div class="callout-left">
      <div class="callout-text-container">
        <div class="callout-title">
          <h1>{{ title }}</h1>
        </div>
        <div class="callout-description">
          <p>{{ description }}</p>
        </div>

        {% if url %}
          <a href="{{ url }}"><div class="products-cta">{{ cta }}</div></a>
        {% endif %}

      </div>
    </div>
  </div>

  <div class="grid__item large--one-half callout-right">
    <div class="callout-image-bottom" style="background: url({{ image1 }}); background-repeat: no-repeat; background-size: cover; background-position: center;">
    </div>
    <div class="callout-image-top" style="background: url({{ image2 }}); background-repeat: no-repeat; background-size: cover; background-position: center;">
    </div>
  </div>

</div>
